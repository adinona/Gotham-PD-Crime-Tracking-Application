<div class = 'row'>
  <div class="col s8">

    <div class="card" >
      <div class="card-content">
        <table class="lined">
          <thead>
            <th>Name</th>
            <th>Number of Assignments</th>

          </thead>
            <% for officer in @of %>
              <tr>
                <% if officer.current_assignments.nil? == false %>
                  <td><%=  link_to officer.name, officer_path(officer)  %></td>
                   <td><%=  officer.current_assignments.count  %></td>
                <% else %>
                <% end %>

              </tr>
          <% end %>

        </table>
        
      </div>
    </div>
  </div>

  <div class="col s4">

    <div class="card" >
      <div class="card-content">
        <span class="card-title">Officers w/o Assignments</span>
        <table class="lined">
          <thead>
            <th>Name</th>

          </thead>
            <% for officer in @of %>
              <tr>
                <% if officer.current_assignments.nil? %>
                  <td><%=  link_to officer.name, officer_path(officer)  %></td>
                <% else %>
                <% end %>
              
              </tr>
          <% end %>

        </table>

      </div>
    </div>
</div>
</div>

