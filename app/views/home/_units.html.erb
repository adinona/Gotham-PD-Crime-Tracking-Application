<div class = 'row'>
  <div class="col s8">

    <div class="card" >
      <div class="card-content">
        <span class="card-title">Units</span>
        <table class="lined">
          <thead>
            <th>Name</th>
            <th>Number of Cases solved</th>

          </thead>

            <% for unit in @tunits %>
              <tr>
                <td><%= unit.name %></td>
                 <% if unit.officers.map{|o| o.investigations}.flatten.count == 0 %>
                  <td>0</td>
                <% else %>
                  <td><%= unit.officers.map{|o| o.investigations}.flatten.count%></td>
                <% end %>

              </tr>
          <% end %>

        </table>
   <p class="supertiny"></p>
  <br />
      <%= will_paginate @tunits, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %>

        
      </div>
    </div>
  </div>

  <div class="col s4">

    <div class="card" >
      <div class="card-content">
        <span class="card-title">Units without Officers</span>
        <table class="lined">
          <thead>
            <th>Name</th>

          </thead>
            <% for unit in @tunits %>
              <tr>
                <% if unit.officers.count == 0 %>
                  <td><%= unit.name %></td>
                <% else %>
                <% end %>
              
              </tr>
          <% end %>

        </table>

      </div>
    </div>
</div>
</div>


  
