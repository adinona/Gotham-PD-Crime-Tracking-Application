<% if @current_investigations.empty? %>
 <% if can? :new, Suspect %>
    <div class="card grey lighten-3">
      <div class="card-action">
        <%= link_to "Add a new suspect", new_suspect_path(criminal_id: @criminal.id) %>
      </div>
    </div>
  <% end %>
<% else%>
  <div class="card">
    <div class="card-content">
      <span class="card-title">Current Investigations</span>
      <table class="lined">
        <thead>
          <th>Case</th>
          <th>Starting</th>
        </thead>
          <% for assignment in @current_investigations %>
            <tr>
             <td> <%= link_to assignment.title, investigation_path(assignment) %></td>
              <td><%= assignment.date_opened.strftime("%m/%d/%y") %></td>
            </tr>
          <% end %>
      </table>
      <% if can? :new, Suspect %>
      <div class="card-action">
        <%= link_to "Add a new suspect", new_suspect_path(criminal_id: @criminal.id) %>
      </div>
    <% end %>
    </div>
  </div>
<% end%>

