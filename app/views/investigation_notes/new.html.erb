<div class="row">
  <div class="col s7">
    <h4>New Note:</h4>
    <%= simple_form_for(@investigationNote) do |f| %>

    <% if @investigationNote.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@investigationNote.errors.count, "error") %> prohibited this investigation note from being saved:</h2>

          <ul>
          <% @investigationNote.errors.full_messages.each do |msg| %>
